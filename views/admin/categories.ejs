    <!-- Morris Plugin Js -->
    <script src="https://gurayyarar.github.io/AdminBSBMaterialDesign/plugins/raphael/raphael.min.js"></script>
    <script src="https://gurayyarar.github.io/AdminBSBMaterialDesign/plugins/morrisjs/morris.js"></script>

    <!-- ChartJs -->
    <script src="https://gurayyarar.github.io/AdminBSBMaterialDesign/plugins/chartjs/Chart.bundle.js"></script>

